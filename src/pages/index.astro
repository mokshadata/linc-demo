---
import BaseLayout from "@layouts/BaseLayout.astro";
import Heading from "@components/Heading.astro";

import { Image } from "astro:assets";
import familyWithBikingDaughter from '@assets/images/family-bike.jpg'
import family1 from '@assets/images/pexels-august-de-richelieu-4260639.jpg'
import family2 from '@assets/images/pexels-cottonbro-6667301.jpg'
import family3 from '@assets/images/pexels-elly-fairytale-3893723.jpg'
import family4 from '@assets/images/pexels-olly-3820120.jpg'
import family5 from '@assets/images/pexels-pnw-prod-7677946.jpg'
import family6 from '@assets/images/pexels-shvetsa-4586685.jpg'

const pageTitle: string = "LINC: Get help for rent in Fort Bend!";
---

<BaseLayout pageTitle={pageTitle}>
  <main data-page="index">
    <!-- <section>

    </section> -->
    <!-- Hero -->
    <section class="hero">
      <!-- <div> -->
        <div class="container grid">
          <div>
            <Image src={familyWithBikingDaughter} alt="Fort Bend family biking"/>
          </div>
          <div class="content">
            <Heading
              title="Many Fort Bend families need help for rent."
              heading="1"
              description="Fort Bend LINC connects people like you to rental assistance."
            />
            <p>
              <a href="#get-started" role="button" class="primary">See if you qualify</a>
              <a href="#why-linc" role="button" class="outline">Learn more</a>
            </p>
          </div>
        </div>
      <!-- </div> -->
    </section>
  <!-- ./ Hero -->
    <section id="why-linc">
      <div class="container">
        <h1 class="headline">In 2024, more than 1,000 Fort Bend families needed rental assistance.</h1>
        <div class="grid">
          <div class="content">
            <h3>Here's how they got help.</h3>
            <p>The Smith family had job changes and new medical bills in the beginning of 2024.  They got behind on a couple of bills and were starting to catch up.  Then, the May derechos hit and caused car damage. They reached out to their landlord about how they were struggling. The due date for their rent was extended. They applied for rental assistance with ______ and got two months rent paid.</p>
            <p>After two months, they were back on their feet.</p>
          </div>
          <div>
            <Image src={family5} alt="Smith family"/>
          </div>
        </div>
        <h1 class="headline">LINC can connect <em>you</em> to the rental assistance you need.</h1>
      </div>
    </section>
    <section id="how-it-works">
      <div class="container">
        <div class="grid">
          <div>
            <Image src={family2} alt="family"/>
          </div>
          <div>
            <h1>How LINC works</h1>
            <p>With LINC, you'll get answers quickly, whether it be yes or no. Here's how:</p>
            <ol>
              <li>
                <p>
                  You fill out a 5 question pre-screener.
                </p>
                <ul>
                  <li>We let you know right away if you will not qualify.</li>
                  <li>If you may qualify, we ask you to complete our ___ question application.</li>
                </ul>
              </li>
              <li>
                <p>Your application will be queued for review.</p>
                <p>If we are not able to meet your rental </p>
              </li>
            </ol>
          </div>
        </div>
      </div>
    </section>
    <section id="get-started">
      <div class="container">
        <h1>Get Started</h1>
      </div>
    </section>
    <section id="whats-next">
      <div class="container">
        <h1>What's Next</h1>
      </div>
    </section>
  </main>
</BaseLayout>

<style define:vars={{ family: `url(${familyWithBikingDaughter.src})` }}>
section {
  min-height: 700px;
  display: flex;
  align-items: center;
  padding-top: 4rem;
  padding-bottom: 4rem;
  margin-bottom: 0;
}

section p {
  font-size: 20px;
}

.grid {
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.content {
  padding: 1rem;
}

img {
  border-radius: 2rem;

  --s: 6rem; /* the size on the corner */
  --t: 5px;  /* the thickness of the border */
  --g: 1rem; /* the gap between the border and image */
  
  padding: calc(var(--g) + var(--t));
  outline: var(--t) solid var(--linc--green--dark); /* the color here */
  outline-offset: calc(-1*var(--t));
  mask:
    conic-gradient(at var(--s) var(--s),#0000 75%,#000 0)
     0 0/calc(100% - var(--s)) calc(100% - var(--s)),
    conic-gradient(#000 0 0) content-box;
  transition: .4s;
}


.hero {
  /* background-image: var(--family); */
  /* background-size: cover; */
  /* background-attachment: fixed; */
  background-color: rgba(var(--linc--green--rgb), 1);
}

.hero h1 {
  color: var(--linc--green--dark);
}

.hero [role="button"] {
  border-width: 4px;
  transition: background-color var(--pico-transition),border-color var(--pico-transition),color var(--pico-transition),box-shadow var(--pico-transition), transform var(--pico-transition);
}

.hero [role="button"]:hover {
  transform: translate(-4px, -4px);
}

.hero [role="button"].primary {
  background-color: hsla(var(--linc--purple--hs), 50%, 1);
  border-color: hsla(var(--linc--purple--hs), 50%, 1);
  color: var(--white);
}

.hero [role="button"].primary:hover {
  box-shadow: 4px 6px 0 hsla(var(--linc--purple--hs), 20%, 1);
}

.hero [role="button"].outline {
  background-color: rgba(var(--white--rgb, 0.5));
  color: hsla(var(--linc--purple--hs), 50%, 1);
  border-color: hsla(var(--linc--purple--hs), 50%, 1);
}

.hero [role="button"].outline:hover {
  box-shadow: 4px 4px 0 hsla(var(--linc--purple--hs), 50%, 1);
}

/* .hero > div {
  background-color: rgba(var(--linc--green--rgb), 0.8);
  backdrop-filter: blur(10px);
} */

.headline em {
  text-decoration: underline;
}

#why-linc {
  background-color: var(--seashell);
}
#why-linc .content {
  text-align: right;
}
#why-linc .headline {
  text-align: center;
}
#why-linc h1 {
  color: var(--linc--green--dark);
}
#why-linc h3 {
  color: var(--linc--green);
}
#why-linc > div > h1 {
  margin-top: 2rem;
}

#get-started {
  background-color: var(--seashell);
}
#get-started .content {
  text-align: right;
}
#get-started .headline {
  text-align: center;
}
#get-started h1 {
  color: var(--linc--green--dark);
}
#get-started h3 {
  color: var(--linc--green);
}
#get-started > div > h1 {
  margin-top: 2rem;
}

#how-it-works, #whats-next {
  background-color: var(--linc--green);
}
